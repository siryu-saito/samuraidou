<h2>新規登録</h2>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ユーザー名 %><br />
    <%= f.email_field :user_name, autofocus: true, autocomplete: "ユーザー名" %>
  </div>

  <div class="field">
    <%= f.label :"姓" %>/<%= f.label :"名" %><br/>
    <%= f.email_field :last_name, autofocus: true, autocomplete: "姓" %> <%= f.email_field :first_name, autofocus: true, autocomplete: "名" %>
  </div>

  <div class="field">
    <%= f.label :"セイ" %>/<%= f.label :"メイ" %><br/>
    <%= f.email_field :last_name_kana, autofocus: true, autocomplete: "セイ" %> <%= f.email_field :first_name_kana, autofocus: true, autocomplete: "メイ" %>
  </div>

  <div class="field">
    <%= f.label :"都道府県" %><br/>
    <%= f.select :prefectures, User.prefectures.keys, {} %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br/>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
